<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewRefrescos"
        android:layout_width="353dp"
        android:layout_height="196dp"
        android:contentDescription="Refrescos"
        android:padding="16dp"
        android:src="@drawable/refrescos" />

    <ImageView
        android:id="@+id/imageViewPizzas"
        android:layout_width="359dp"
        android:layout_height="254dp"
        android:contentDescription="Pizzas"
        android:padding="16dp"
        android:src="@drawable/pizzas" />

    <ImageView
        android:id="@+id/imageViewAbarrotes"
        android:layout_width="355dp"
        android:layout_height="183dp"
        android:contentDescription="Abarrotes"
        android:padding="16dp"
        android:src="@drawable/abarrotes" />
</LinearLayout>
